<div class="card mb-2">
  <div class="card-body">
    <%= link_to 'X', [@org, @season, @league, game],
            class: 'float-right btn btn-sm btn-danger',
            method: :delete,
            data: { confirm: 'Are you sure you want to destroy ' + game.identifier + '?'} %>
    <h3><%= link_to (game.identifier), [@org, @season, @league, game] %></h3>
    <%= link_to 'Edit', [:edit, @org, @season, @league, game], class: 'float-right btn btn-sm btn-secondary' %>
    <%= game.date.strftime("%b %-d, %Y @ %a %l:%M %p") %>
  </div>
</div>
